<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#262020"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_margin="32dp"
        android:gravity="center_horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="@string/register"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/edtTxtName"
            android:layout_width="350dp"
            android:layout_height="32dp"
            android:background="#fff"
            android:hint="@string/nombre"
            android:inputType="text" />
        <EditText
            android:id="@+id/edtTxtLtNm"
            android:layout_width="350dp"
            android:layout_height="32dp"
            android:layout_marginTop="25dp"
            android:background="#fff"
            android:hint="@string/apellido"
            android:inputType="text" />
        <EditText
            android:id="@+id/edtTxtEmail"
            android:layout_width="350dp"
            android:layout_height="32dp"
            android:layout_marginTop="25dp"
            android:background="#fff"
            android:hint="@string/email"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtTxtPsswd4"
            android:layout_width="350dp"
            android:layout_height="32dp"
            android:layout_marginTop="25dp"
            android:inputType="numberPassword"
            android:background="#fff"
            android:hint="@string/password"/>

        <EditText
            android:id="@+id/edtTxtUsrNm4"
            android:layout_width="350dp"
            android:layout_height="32dp"
            android:layout_marginTop="25dp"
            android:background="#fff"
            android:hint="@string/documento_identidad"
            android:inputType="text" />
        <EditText
            android:id="@+id/edtTxtSexo"
            android:layout_width="350dp"
            android:layout_height="32dp"
            android:background="#fff"
            android:layout_marginTop="25dp"
            android:hint="@string/sexo"
            android:inputType="text" />
        <EditText
            android:id="@+id/edtTxtFchNaci"
            android:layout_width="350dp"
            android:layout_marginTop="25dp"
            android:layout_height="32dp"
            android:background="#fff"
            android:hint="@string/fecha_nacimiento"
            android:inputType="text" />
        <Button
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="#fff"
            android:text="@string/login"
            android:onClick="onRegistrar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:onClick="onCancelar"
            android:layout_gravity="center_horizontal"
            android:text="@string/cancelar"/>
    </LinearLayout>



</LinearLayout>